import java.util.Scanner;
public class Opppse {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int a=sc.nextInt();
		int[] num=new int[a];
		int c=0;
		for(int i=0;i<a;i++){
			int b=sc.nextInt();
			num[i]=b;
		}
		for(int i=0;i<a;i++){
			for(int j=i+1;j<a;j++){
				if(num[i]+num[j]==0){
					c++;
				}
			}
		}
		System.out.println(c);
	}
}
