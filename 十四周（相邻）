import java.util.Scanner;

public class Contiguous {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		int[] b=new int [a];
		int sum = 0;
		for(int i=0;i<a;i++){
			b[i]=sc.nextInt();
		}
		for(int i=0;i<a;i++){
			for(int j=i+1;j<a;j++){
				int c=b[i]-b[j];
				if(Math.abs(c)==1){
					sum++;
				}
			}
		}
		System.out.println(sum);
	}
}
