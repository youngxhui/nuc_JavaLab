import java.util.Scanner;
public class Shulie {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int m=sc.nextInt();
		int sum=1;
		int a[]=new int[m];
		for(int i=0;i<m;i++){
			a[i]=sc.nextInt();
		}
		for(int i=1;i<m;i++){
			int x=a[i-1];
			int y=a[i];
			if(x!=y){
				sum++;
			}
		}
		System.out.println(sum);
	}
}
